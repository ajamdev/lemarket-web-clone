---
import Seo from '@/components/Seo.astro'
import '../styles/global.css'

interface Props {
	title?: string
	description?: string
	image?: string
}

const { title, description, image } = Astro.props
---

<!doctype html>
<html lang="es-CO">
	<head>
		<Seo title={title} description={description} image={image} />
	</head>
	<body>
		<main>
			<slot />
		</main>
	</body>
</html>
