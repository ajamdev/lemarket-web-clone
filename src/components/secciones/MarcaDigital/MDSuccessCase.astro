---
import Section from '@/components/UI/Section.astro'
import { Icon } from 'astro-icon/components'

const CASES = [
	{
		avatar: 'jda',
		name: 'Juan Diego Astudillo',
		role: 'Consultor en CX en Hightelecom',
		description:
			'A traves de una estrategia de posicionamiento integral, aprovechamos su alto nivel de empatia y le dimos visibilidad en contenidos relevantes, lead magnets, webinars, lives y articulos. Logramos impulsar la experticia de su empresa en el sector del Customer Experience en Ecuador.',
		results: [
			'Posicionamiento como referente en CX',
			'Crecimiento exponencial en LinkedIn',
			'Host de eventos del sector'
		]
	},
	{
		avatar: 'oc',
		name: 'Oscar Chacon',
		role: 'Director Comercial en Telecable Empresarial',
		description:
			'Oscar y su equipo lograron destacarse de su competencia en Costa Rica, captando la atencion de tomadores de decision 10x mas rapido. Se motivo a lanzar su marca personal como consultor y logro escalar a nuevos cargos como director general.',
		results: [
			'10x mas rapido en captar atencion',
			'Ascenso a Director General',
			'Lanzamiento de marca personal propia'
		]
	},
	{
		avatar: 'c',
		name: 'Cerrejon',
		role: 'Empresa Minera en Colombia',
		description:
			'Implementamos una estrategia enfocada en desarrollar las redes sociales de sus lideres, creando contenidos de valor alineados a su experticia y audiencia. Generamos mayor confianza en momentos de crisis empresarial y epidemico.',
		results: [
			'Top Companies de LinkedIn',
			'Mayor interaccion con la comunidad',
			'Credibilidad en momentos de crisis'
		]
	}
]
---

<Section class="lg:py-8">
	<header class="text-center">
		<span class="uppercase text-purple-500 text-xs">Casos de exito</span>
		<h2 class="text-h2 font-bold text-balance my-h2">
			<span>Lideres que se convirtieron en</span>
			<span class="text-purple-500">Voces Expertas</span>
		</h2>
	</header>
	<footer class="grid grid-cols-1 lg:grid-cols-3 gap-5 items-center pt-6">
		{
			CASES.map((c) => (
				<article class="rounded-2xl w-full h-full overflow-hidden border-2 border-gray-200 lg:hover:shadow-xl transition-all duration-300 ease-in">
					<div class="px-6 py-4 bg-gray-200 w-full flex items-center gap-x-4">
						<span class="uppercase text-purple-500 bg-purple-50 size-10 items-center justify-center flex rounded-full font-bold">
							{c.avatar}
						</span>
						<div>
							<h3 class="font-bold text-h3 text-balance">{c.name}</h3>
							<p class="text-sm text-gray-500">{c.role}</p>
						</div>
					</div>
					<div class="px-6 py-4">
						<Icon
							name="tabler:quote"
							class="text-gray-500 size-10 rotate-180"
						/>
						<p class="text-p my-p text-pretty">{c.description}</p>
						<hr class="border-t-2 border-gray-500" />
						<h6 class="uppercase text-purple-500 text-h6 my-h6">Resultados</h6>
						<ul>
							{c.results.map((label) => (
								<li class="flex items-center gap-x-2">
									<Icon
										name="lucide:circle-check-big"
										class="text-purple-500 size-4 shrink-0"
									/>
									<span>{label}</span>
								</li>
							))}
						</ul>
					</div>
				</article>
			))
		}
	</footer>
</Section>
