---
import CardTestimoni from '@/components/CardTestimoni.astro'
import Section from '@/components/UI/Section.astro'
import { TESTIMONIOS } from '@/lib/const/testimonio'
import { Icon } from 'astro-icon/components'
---

<Section class="lg:py-8">
	<header class="text-center">
		<span class="uppercase text-purple-500">Testimonios</span>
		<h2 class="my-h2 text-h2 font-bold max-w-xl mx-auto text-balance">
			Esto es lo que dicen <span class="text-purple-500">nuestros clientes</span
			>
		</h2>
	</header>
	<footer class="grid grid-cols-1 lg:grid-cols-3 gap-5 items-center pt-6">
		{TESTIMONIOS.map((testimonio) => (
			<CardTestimoni {...testimonio} />
		))}
	</footer>
</Section>
