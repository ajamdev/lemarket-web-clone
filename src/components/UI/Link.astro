---
import { Icon } from 'astro-icon/components'
interface Props {
	label: string
	href: string
	style: 'primary' | 'secondary'
	classes?: string
	target?: string
	rel?: string
	icon?: {
		name: string
		side: 'left' | 'right'
	}
}
const { label, href, style, classes, target, rel, icon, ...rest } =
	Astro.props as Props
---

<a
	class:list={[
		'inline-flex items-center space-x-2 justify-center px-8 py-3 rounded-full font-semibold',
		{
			'bg-purple-500 text-purple-50': style === 'primary',
			'border-2 border-purple-500 text-purple-500': style === 'secondary'
		},
		classes
	]}
	href={href}
	{...rest}>
	{
		icon &&
		icon.side === 'left' && (
			<Icon name={icon.name} class="w-5 h-5" />
		)
	}
	<span>{label}</span>
	{
		icon &&
		icon.side === 'right' && (
			<Icon name={icon.name} class="w-5 h-5" />
		)
	}
</a>